{% extends '::base.html.twig' %}

{% block title %} <i class="fa fa-tasks"></i> {{ 'Customers'|trans }} {% endblock %}
{% block subtitle %}{{ 'Customer List'|trans }}{% endblock %}

{% block content %}
    <div>
        <div class="header">
            <div class="actions"> <a href="#" class="minimize"><i class="fa fa-chevron-down"></i></a> <a href="#" class="refresh"><i class="fa fa-repeat"></i></a> <a href="#" class="close-down"><i class="fa fa-times"></i></a> </div>
            <h3 class="content-header">{{ block('subtitle') }}</h3>
        </div>
        <div class="porlets-content">
            <p>{{ util.button_text('customers_new', {}, 'Add New'|trans, 'info') }}</p>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>{{ 'Name'|trans }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for customer in customers %}
                        <tr>
                            <td>{{ customer.name }}</td>
                            <td>
                                {{ util.button_icon('customers_edit', {id: customer.id}, 'Edit Customer'|trans, 'warning', 'pencil') }}
                                {{ util.button_icon('customers_delete', {id: customer.id}, 'Delete Customer'|trans, 'danger', 'remove') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div><!--/table-responsive-->
        </div><!--/porlets-content-->
    </div>
    <div>
        {{ knp_pagination_render(customers) }}
    </div>
{% endblock %}
