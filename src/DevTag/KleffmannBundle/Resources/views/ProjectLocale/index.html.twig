{% extends '::base.html.twig' %}

{% block title %} Locations to {{ project.name | title }} Project{% endblock %}

{% block content %}
    <div>
        <div class="header">
            <div class="actions"> <a href="#" class="minimize"><i class="fa fa-chevron-down"></i></a> <a href="#" class="refresh"><i class="fa fa-repeat"></i></a> <a href="#" class="close-down"><i class="fa fa-times"></i></a> </div>
            <h3 class="content-header">Locale List</h3>
        </div>
        <div class="porlets-content">
            <p>{{ util.button_text('new_project_locale', {id: project.id}, 'Add new', 'info') }}</p>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>State</th>
                        <th>City</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for projectLocale in projectLocaleList %}
                            <tr>
                                <td>{{ projectLocale.state.name }}</td>
                                <td>{{ projectLocale.city.name }}</td>
                                <td>
                                    {{ util.button_icon('edit_project_locale', {id: projectLocale.id}, 'Edit Locale', 'warning', 'pencil') }}
                                    {{ util.button_icon('delete_project_locale', {id: projectLocale.id}, 'Delete Locale', 'danger', 'remove') }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div><!--/table-responsive-->
        </div><!--/porlets-content-->
    </div>
{% endblock %}
