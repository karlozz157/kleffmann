{% extends '::base.html.twig' %}

{% block title %}<i class="glyphicon glyphicon-list-alt"></i> {{ 'Interviewers'|trans }}{% endblock %}
{% block subtitle %} {{ 'List interviewers'|trans }} {% endblock %}


{% block content %}
    <div>
        <div class="header">
            <div class="actions"> <a href="#" class="minimize"><i class="fa fa-chevron-down"></i></a> <a href="#" class="refresh"><i class="fa fa-repeat"></i></a> <a href="#" class="close-down"><i class="fa fa-times"></i></a> </div>
            <h3 class="content-header">{{ block('subtitle') }}</h3>
        </div>
        <div class="porlets-content">
            <p>{{ util.button_text('new_interviewer', {}, 'Add New'|trans, 'info') }}</p>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>{{ 'State'|trans }}</th>
                        <th>{{ 'City'|trans }}</th>
                        <th>{{ 'Name'|trans }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for interviewer in interviewers %}
                        <tr>
                            <td>{{ interviewer.state.name }}</td>
                            <td>{{ interviewer.city.name }}</td>
                            <td>{{ interviewer.name }}</td>
                            <td>
                                {{ util.button_icon('edit_interviewer', {id: interviewer.id}, 'Edit Interviewer'|trans, 'warning', 'pencil') }}
                                {{ util.button_icon('delete_interviewer', {id: interviewer.id}, 'Delete Interviewer'|trans, 'danger', 'remove') }}
                            </td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div><!--/table-responsive-->
        </div><!--/porlets-content-->
    </div>
{% endblock %}
