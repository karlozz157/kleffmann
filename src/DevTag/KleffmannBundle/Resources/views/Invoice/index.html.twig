{% extends '::base.html.twig' %}

{% block title %}<i class="fa fa-folder-open"></i> {{ 'Invoices'|trans }}{% endblock %}
{% block subtitle %} {{ 'Invoice List'|trans }} {% endblock %}

{% block content %}
    <div>
        <div class="header">
            <div class="actions"> <a href="#" class="minimize"><i class="fa fa-chevron-down"></i></a> <a href="#" class="refresh"><i class="fa fa-repeat"></i></a> <a href="#" class="close-down"><i class="fa fa-times"></i></a> </div>
            <h3 class="content-header">{{ block('subtitle') }}</h3>
        </div>
        <div class="porlets-content">
            <p>{{ util.button_text('invoices_new', {}, 'Add New'|trans, 'info') }}</p>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>{{ 'Project'|trans }}</th>
                        <th>{{ 'Date'|trans }}</th>
                        <th>{{ 'File'|trans }}</th>
                        <th>{{ 'Amount'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for invoice in invoices %}
                        <tr>
                            <td>{{ invoice.project.name }}</td>
                            <td>{{ invoice.date | date('d/m/Y') }}</td>
                            <td>{{ invoice.file }}</td>
                            <td>{{ invoice.amount }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div><!--/table-responsive-->
        </div><!--/porlets-content-->
    </div>
{% endblock %}
