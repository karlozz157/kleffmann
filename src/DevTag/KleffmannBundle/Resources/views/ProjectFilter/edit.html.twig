{% extends '::base.html.twig' %}

{% block title %} Edit filter to {{ project.name | title }} Project {% endblock %}

{% block content %}
    <div>
        <div class="header">
            <div class="actions"> <a class="minimize" href="#"><i class="fa fa-chevron-down"></i></a> <a class="refresh" href="#"><i class="fa fa-repeat"></i></a> <a class="close-down" href="#"><i class="fa fa-times"></i></a> </div>
            <h3 class="content-header">without title</h3>
        </div>
        <div class="row porlets-content">
            {{ form_start(form) }}
            <div class="col-md-4">
                <div class="panel">
                    <div class="panel-body">
                        <div class="form-group">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.value) }}
                            {{ form_widget(form.value) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.subFilterName) }}
                            {{ form_widget(form.subFilterName) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.subValueName) }}
                            {{ form_widget(form.subValueName) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.state) }}
                            {{ form_widget(form.state) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.city) }}
                            {{ form_widget(form.city) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <button class="btn btn-default">Cancel</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
