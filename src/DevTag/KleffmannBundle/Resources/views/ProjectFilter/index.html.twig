{% extends '::base.html.twig' %}

{% block title %} Filters to {{ project.name | title }} Project{% endblock %}

{% block content %}
    <div>
        <div class="header">
            <div class="actions"> <a href="#" class="minimize"><i class="fa fa-chevron-down"></i></a> <a href="#" class="refresh"><i class="fa fa-repeat"></i></a> <a href="#" class="close-down"><i class="fa fa-times"></i></a> </div>
            <h3 class="content-header">Locale List</h3>
        </div>
        <div class="porlets-content">
            <p>{{ util.button_text('new_project_filter', {id: project.id}, 'Add new', 'info') }}</p>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Value</th>
                        <th>Sub filter name</th>
                        <th>Sub filter value</th>
                        <th>State</th>
                        <th>City</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for projectFilter in projectFilterList %}
                        <tr>
                            <td>{{ projectFilter.name }}</td>
                            <td>{{ projectFilter.value }}</td>
                            <td>{{ projectFilter.subFilterName }}</td>
                            <td>{{ projectFilter.subValueName }}</td>
                            <td>{{ projectFilter.state.name }}</td>
                            <td>{{ projectFilter.city.name }}</td>
                            <td>
                                {{ util.button_icon('edit_project_filter', {id: projectFilter.id}, 'Edit Locale', 'warning', 'pencil') }}
                                {{ util.button_icon('delete_project_filter', {id: projectFilter.id}, 'Delete Locale', 'danger', 'remove') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div><!--/table-responsive-->
        </div><!--/porlets-content-->
    </div>
{% endblock %}
