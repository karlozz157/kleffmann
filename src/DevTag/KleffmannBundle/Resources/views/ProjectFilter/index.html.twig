{% extends '::base.html.twig' %}

{% block title %}{{ 'Filters to'|trans }} {{ projectVariable.name|title }}{% endblock %}
{% block subtitle %}{{ 'Filter List'|trans }}{% endblock %}

{% block content %}
    <div>
        <div class="header">
            <div class="actions"> <a href="#" class="minimize"><i class="fa fa-chevron-down"></i></a> <a href="#" class="refresh"><i class="fa fa-repeat"></i></a> <a href="#" class="close-down"><i class="fa fa-times"></i></a> </div>
            <h3 class="content-header">{{ block('subtitle') }}</h3>
        </div>
        <div class="porlets-content">
            <p>{{ util.button_text('project_filters_new', {id: projectVariable.id}, 'Add New'|trans, 'info') }}</p>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>{{ 'Name'|trans }}</th>
                        <th>{{ 'Value'|trans }}</th>
                        <th>{{ 'State'|trans }}</th>
                        <th>{{ 'City'|trans }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for projectFilter in projectFilterList %}
                        <tr>
                            <td>{{ projectFilter.name }}</td>
                            <td>{{ projectFilter.value }}</td>
                            <td>{{ projectFilter.state.name }}</td>
                            <td>{{ projectFilter.city.name }}</td>
                            <td>
                                {{ util.button_icon('project_subfilters', {projectFilter: projectFilter.id}, 'Subfilters'|trans, 'success', 'flash') }}
                                {{ util.button_icon('project_filters_edit', {id: projectFilter.id}, 'Edit Filter'|trans, 'warning', 'pencil') }}
                                {{ util.button_icon('project_filters_delete', {id: projectFilter.id}, 'Delete Filter'|trans, 'danger', 'remove') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div><!--/table-responsive-->
        </div><!--/porlets-content-->
    </div>
{% endblock %}
