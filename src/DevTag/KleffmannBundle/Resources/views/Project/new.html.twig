{% extends '::base.html.twig' %}

{% block title %} Project {% endblock %}

{% block content %}
<div>
    <div class="header">
        <div class="actions"> <a class="minimize" href="#"><i class="fa fa-chevron-down"></i></a> <a class="refresh" href="#"><i class="fa fa-repeat"></i></a> <a class="close-down" href="#"><i class="fa fa-times"></i></a> </div>
        <h3 class="content-header">New {{ block('title') }}</h3>
    </div>
    <div class="row porlets-content">
        {{ form_start(form) }}
        <div class="col-md-4">
            <div class="panel">
                <div class="panel-body">
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.customer) }}
                        {{ form_widget(form.customer) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.method) }}
                        {{ form_widget(form.method) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel">
                <div class="panel-body">
                    <div class="form-group">
                        {{ form_label(form.total) }}
                        {{ form_widget(form.total) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.year) }}
                        {{ form_widget(form.year) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.status) }}
                        {{ form_widget(form.status) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel">
                <div class="panel-body">
                    <div class="form-group">
                        {{ form_label(form.manager) }}
                        {{ form_widget(form.manager) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.region) }}
                        {{ form_widget(form.region) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <button class="btn btn-default">Cancel</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
