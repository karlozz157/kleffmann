{% extends '::base.html.twig' %}

{% block title %} <i class="fa fa-tasks"></i> {{ 'Projects'|trans }} {% endblock %}
{% block subtitle %}{{ 'Edit Project'|trans }}{% endblock %}

{% block content %}
    <div>
        <div class="header">
            <div class="actions"> <a class="minimize" href="#"><i class="fa fa-chevron-down"></i></a> <a class="refresh" href="#"><i class="fa fa-repeat"></i></a> <a class="close-down" href="#"><i class="fa fa-times"></i></a> </div>
            <h3 class="content-header">{{ block('subtitle') }}</h3>
        </div>
        <div class="row porlets-content">
            {{ form_start(form) }}
            <div class="col-md-4">
                <div class="panel">
                    <div class="panel-body">
                        <div class="form-group">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.interviewer) }}
                            {{ form_widget(form.interviewer) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.customer) }}
                            {{ form_widget(form.customer) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.methodologies) }}
                            {{ form_widget(form.methodologies) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel">
                    <div class="panel-body">
                        <div class="form-group">
                            {{ form_label(form.fee) }}
                            {{ form_widget(form.fee) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.status) }}
                            {{ form_widget(form.status) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.projectType) }}
                            {{ form_widget(form.projectType) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.projectTypeUprising) }}
                            {{ form_widget(form.projectTypeUprising) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.manager) }}
                            {{ form_widget(form.manager) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel">
                    <div class="panel-body">
                        <div class="form-group">
                            {{ form_label(form.startDate) }}
                            {{ form_widget(form.startDate) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.estimateDate) }}
                            {{ form_widget(form.estimateDate) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.endDate) }}
                            {{ form_widget(form.endDate) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                <button class="btn btn-default">{{ 'Cancel'|trans }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
