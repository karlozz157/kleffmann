{% extends '::base.html.twig' %}

{% block title %}{{ 'Subfilters to'|trans }} {{ project_filter.name|title }}{% endblock %}
{% block subtitle %}{{ 'Subfilter List'|trans }}{% endblock %}

{% block content %}
    <div>
        <div class="header">
            <div class="actions"> <a href="#" class="minimize"><i class="fa fa-chevron-down"></i></a> <a href="#" class="refresh"><i class="fa fa-repeat"></i></a> <a href="#" class="close-down"><i class="fa fa-times"></i></a> </div>
            <h3 class="content-header">{{ block('subtitle') }}</h3>
        </div>
        <div class="porlets-content">
            <p>{{ util.button_text('project_subfilters_new', {projectFilter: project_filter.id}, 'Add New'|trans, 'info') }}</p>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>{{ 'Name'|trans }}</th>
                        <th>{{ 'Value'|trans }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for projectSubfilter in projectSubfilters %}
                        <tr>
                            <td>{{ projectSubfilter.name }}</td>
                            <td>{{ projectSubfilter.value }}</td>
                            <td>
                                {{ util.button_icon('project_subfilters_edit', {id: projectSubfilter.id}, 'Edit Subfilter'|trans, 'warning', 'pencil') }}
                                {{ util.button_icon('project_subfilters_delete', {id: projectSubfilter.id}, 'Delete Subfilter'|trans, 'danger', 'remove') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div><!--/table-responsive-->
        </div><!--/porlets-content-->
    </div>
{% endblock %}
