{% extends '::base.html.twig' %}

{% block title %}{{ 'Status'|trans }}{% endblock %}
{% block subtitle %}{{ 'Status List'|trans }}{% endblock %}

{% block content %}
    <div>
        <div class="header">
            <div class="actions"> <a href="#" class="minimize"><i class="fa fa-chevron-down"></i></a> <a href="#" class="refresh"><i class="fa fa-repeat"></i></a> <a href="#" class="close-down"><i class="fa fa-times"></i></a> </div>
            <h3 class="content-header">{{ block('subtitle') }}</h3>
        </div>
        <div class="porlets-content">
            <p>{{ util.button_text('new_status', {}, 'Add New'|trans, 'info') }}</p>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>{{ 'Name'|trans }}</th>
                        <th>{{ 'Description'|trans }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for status in statusList %}
                        <tr>
                            <td>{{ status.name }}</td>
                            <td>{{ status.description }}</td>
                            <td>
                                {{ util.button_icon('edit_status', {id: status.id}, 'Edit Status'|trans, 'warning', 'pencil') }}
                                {{ util.button_icon('delete_status', {id: status.id}, 'Delete Status'|trans, 'danger', 'remove') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div><!--/table-responsive-->
        </div><!--/porlets-content-->
    </div>
    <div>
        {{ knp_pagination_render(statusList) }}
    </div>
{% endblock %}
