{% extends '::base.html.twig' %}

{% block title %}<i class="glyphicon glyphicon-list-alt"></i> {{ 'Banks'|trans }}{% endblock %}
{% block subtitle %} {{ 'Add New Bank'|trans }} {% endblock %}

{% block content %}
    <div>
        <div class="header">
            <div class="actions"> <a class="minimize" href="#"><i class="fa fa-chevron-down"></i></a> <a class="refresh" href="#"><i class="fa fa-repeat"></i></a> <a class="close-down" href="#"><i class="fa fa-times"></i></a> </div>
            <h3 class="content-header">{{ block('subtitle') }}    </h3>
        </div>
        <div class="row porlets-content">
            {{ form_start(form) }}
            <div class="col-md-4">
                <div class="panel">
                    <div class="panel-body">
                        <div class="form-group">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                <button class="btn btn-default">{{ 'Cancel'|trans }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
