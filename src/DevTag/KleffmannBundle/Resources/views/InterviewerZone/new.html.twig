{% extends '::base.html.twig' %}

{% block title %}<i class="fa fa-folder-open"></i> {{ 'Interviewer Zones'|trans }}{% endblock %}
{% block subtitle %} {{ 'Add New Interviewer Zone for'|trans }} {{ interviewer.name|title }} {% endblock %}

{% block content %}
    <div>
        <div class="header">
            <div class="actions"> <a class="minimize" href="#"><i class="fa fa-chevron-down"></i></a> <a class="refresh" href="#"><i class="fa fa-repeat"></i></a> <a class="close-down" href="#"><i class="fa fa-times"></i></a> </div>
            <h3 class="content-header">{{ block('subtitle') }}    </h3>
        </div>
        <div class="row porlets-content">
            {{ form_start(form) }}
            <div class="col-md-4">
                <div class="panel">
                    <div class="panel-body">
                        {{ form_widget(form) }}
                    </div>
                </div>
            </div>
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                <button class="btn btn-default">{{ 'Cancel'|trans }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}