{% extends '::base.html.twig' %}

{% block title %}{{ 'Trainings'|trans }}{% endblock %}
{% block subtitle %}{{ 'Training List'|trans }}{% endblock %}

{% block content %}
    <div>
        <div class="header">
            <div class="actions"> <a href="#" class="minimize"><i class="fa fa-chevron-down"></i></a> <a href="#" class="refresh"><i class="fa fa-repeat"></i></a> <a href="#" class="close-down"><i class="fa fa-times"></i></a> </div>
            <h3 class="content-header">{{ block('subtitle') }}</h3>
        </div>
        <div class="porlets-content">
            <p>{{ util.button_text('trainings_new', {}, 'Add New'|trans, 'info') }}</p>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>{{ 'Project'|trans }}</th>
                        <th>{{ 'Name'|trans }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for training in trainingList %}
                        <tr>
                            <td>{{ training.project.name }}</td>
                            <td>{{ training.name }}</td>
                            <td>
                                {{ util.button_icon('trainings_edit', {id: training.id}, 'Edit Training'|trans, 'warning', 'pencil') }}
                                {{ util.button_icon('trainings_delete', {id: training.id}, 'Delete Training'|trans, 'danger', 'remove') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div><!--/table-responsive-->
        </div><!--/porlets-content-->
    </div>
{% endblock %}
